FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "rho.*"
    {
        solver          diagonal;
    }

    p
    {
        solver           PCG;
        preconditioner   DIC;
        tolerance        1e-4;
        relTol           0.1;
//	minIter		 5;
    }

    pFinal
    {
        $p;
        tolerance        1e-4;
        relTol           0.0;
    }

    "(U|h|k|epsilon)"
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-6;
        relTol          0.1;
    }

    "(U|h|k|epsilon)Final"
    {
        $U;
        relTol          0;
    }

    Yi
    {
        $hFinal;
    }
}

PIMPLE
{
    momentumPredictor yes;
    nOuterCorrectors  10;
    nCorrectors     1;
    nNonOrthogonalCorrectors 0;

	residualControl
	{
	    p
	    {
		tolerance 1e-2;
		relTol 0.1;
	    }
	}

    relaxationFactor
    {
//	p 0.3;
    }
}


